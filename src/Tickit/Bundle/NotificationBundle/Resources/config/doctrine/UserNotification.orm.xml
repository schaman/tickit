<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Tickit\Bundle\NotificationBundle\Entity\UserNotification" table="user_notifications" repository-class="Tickit\Bundle\NotificationBundle\Entity\Repository\UserNotificationRepository">
        <many-to-one target-entity="Tickit\Bundle\UserBundle\Entity\User" field="recipient" inversed-by="notifications">
            <join-column name="recipient_id" referenced-column-name="id" />
        </many-to-one>

        <field name="readAt" column="read_at" type="datetime" nullable="true" />
    </entity>
</doctrine-mapping>
