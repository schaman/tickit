<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="tickit_notification.controller.api" class="Tickit\Bundle\NotificationBundle\Controller\ApiController" scope="request">
            <argument type="service" id="tickit_notification.provider" />
            <argument type="service" id="tickit.controller.base_helper" />
        </service>

        <service id="tickit_notification.controller.notification" class="Tickit\Bundle\NotificationBundle\Controller\NotificationController" />

    </services>

</container>