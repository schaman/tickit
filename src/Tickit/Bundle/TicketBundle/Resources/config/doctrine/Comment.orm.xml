<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Tickit\Component\Model\Ticket\Comment" table="comments">

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="message" type="string" column="message" length="1000" nullable="false"/>

        <many-to-one field="user" target-entity="Tickit\Bundle\UserBundle\Entity\User">
            <join-columns>
                <join-column name="user_id" referenced-column-name="id" />
            </join-columns>
        </many-to-one>

        <many-to-one field="ticket" target-entity="Tickit\Component\Model\Ticket\Ticket" inversed-by="comments">
            <join-columns>
                <join-column name="ticket_id" referenced-column-name="id" />
            </join-columns>
        </many-to-one>

    </entity>
</doctrine-mapping>
