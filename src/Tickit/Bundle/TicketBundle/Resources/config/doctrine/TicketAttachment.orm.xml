<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Tickit\Bundle\TicketBundle\Entity\TicketAttachment" table="ticket_attachments">

        <id name="id" type="bigint" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="filename" type="string" column="filename" length="60" nullable="false"/>
        <field name="mimeType" type="string" column="mime_type" length="30" nullable="false"/>

        <many-to-one field="ticket" target-entity="Tickit\Bundle\TicketBundle\Entity\Ticket" inversed-by="attachments">
            <join-columns>
                <join-column name="ticket_id" referenced-column-name="id" />
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
