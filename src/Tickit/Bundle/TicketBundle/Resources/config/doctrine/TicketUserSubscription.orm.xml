<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Tickit\Component\Model\Ticket\TicketUserSubscription" table="ticket_user_subscriptions">

        <id name="user" association-key="true"/>
        <id name="ticket" association-key="true"/>

        <field name="newComments" type="boolean" column="new_comments" nullable="false"/>
        <field name="statusChanges" type="boolean" column="status_changes" nullable="false"/>

        <many-to-one field="ticket" target-entity="Tickit\Component\Model\Ticket\Ticket"
                     inversed-by="ticketSubscriptions">
            <join-columns>
                <join-column name="ticket_id" referenced-column-name="id" />
            </join-columns>
        </many-to-one>

        <many-to-one field="user" target-entity="Tickit\Bundle\UserBundle\Entity\User">
            <join-columns>
                <join-column name="user_id" referenced-column-name="id" />
            </join-columns>
        </many-to-one>

    </entity>
</doctrine-mapping>
