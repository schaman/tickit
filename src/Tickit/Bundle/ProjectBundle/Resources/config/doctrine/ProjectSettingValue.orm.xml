<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Tickit\Bundle\ProjectBundle\Entity\ProjectSettingValue" table="project_setting_values">

        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="value" type="string" length="120" />

        <one-to-one field="setting" target-entity="Tickit\Bundle\ProjectBundle\Entity\ProjectSetting">
            <join-column name="project_setting_id" referenced-column-name="id" />
        </one-to-one>

        <many-to-one target-entity="Tickit\Bundle\ProjectBundle\Entity\Project" field="project">
            <join-column name="project_id" referenced-column-name="id" />
        </many-to-one>
    </entity>
</doctrine-mapping>
