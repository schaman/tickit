<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Tickit\Bundle\ProjectBundle\Entity\ChoiceAttribute" inheritance-type="SINGLE_TABLE">

        <field name="expanded" type="boolean" />
        <field name="allowMultiple" column="allow_multiple" type="boolean" />

        <one-to-many target-entity="Tickit\Bundle\ProjectBundle\Entity\ChoiceAttributeValue" mapped-by="attribute"
                     field="values" />

        <one-to-many target-entity="Tickit\Bundle\ProjectBundle\Entity\ChoiceAttributeChoice" mapped-by="attribute"
                     field="choices">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

    </entity>
</doctrine-mapping>
