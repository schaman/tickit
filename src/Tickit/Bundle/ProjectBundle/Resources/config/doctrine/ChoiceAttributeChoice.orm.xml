<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Tickit\Bundle\ProjectBundle\Entity\ChoiceAttributeChoice" repository-class="Tickit\Bundle\ProjectBundle\Doctrine\Repository\ChoiceAttributeChoiceRepository" table="project_attribute_choices">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <many-to-one target-entity="Tickit\Bundle\ProjectBundle\Entity\ChoiceAttribute" field="attribute" inversed-by="choices">
            <join-column name="attribute_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <many-to-many target-entity="Tickit\Bundle\ProjectBundle\Entity\ChoiceAttributeChoice" field="values" mapped-by="value" />

        <field name="name" type="string" length="120" />
    </entity>
</doctrine-mapping>
