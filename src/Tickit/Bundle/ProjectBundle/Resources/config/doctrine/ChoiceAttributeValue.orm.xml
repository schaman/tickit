<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Tickit\Bundle\ProjectBundle\Entity\ChoiceAttributeValue" inheritance-type="SINGLE_TABLE">

        <many-to-one target-entity="Tickit\Bundle\ProjectBundle\Entity\ChoiceAttribute" field="attribute" inversed-by="values">
            <join-column name="attribute_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <many-to-many target-entity="Tickit\Bundle\ProjectBundle\Entity\ChoiceAttributeChoice" field="value" inversed-by="values">
            <join-table name="project_attribute_values_choices">
                <join-columns>
                    <join-column name="choice_attribute_value_id" referenced-column-name="id" on-delete="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="choice_id" referenced-column-name="id" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>
