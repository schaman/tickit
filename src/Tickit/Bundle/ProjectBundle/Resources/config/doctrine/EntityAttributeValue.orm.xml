<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Tickit\Bundle\ProjectBundle\Entity\EntityAttributeValue" inheritance-type="SINGLE_TABLE">

        <field name="value" type="string" length="500" />

        <many-to-one target-entity="Tickit\Bundle\ProjectBundle\Entity\EntityAttribute" field="attribute" inversed-by="values">
            <join-column name="entity_attribute_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

    </entity>
</doctrine-mapping>
