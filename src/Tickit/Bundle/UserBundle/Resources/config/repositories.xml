<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="tickit_user.user_repository" class="Tickit\Bundle\UserBundle\Doctrine\Repository\UserRepository" factory-service="doctrine" factory-method="getRepository">
            <argument>TickitUserBundle:User</argument>

            <call method="setPageResolver">
                <argument type="service" id="tickit_pagination.page_resolver" />
            </call>
        </service>

        <service id="tickit_user.user_session_repository" class="Tickit\Bundle\UserBundle\Doctrine\Repository\UserSessionRepository" factory-service="doctrine" factory-method="getRepository">
            <argument>TickitUserBundle:UserSession</argument>
        </service>

    </services>

</container>