<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="filter_collection_builder.class">Tickit\Component\Filter\Collection\Builder\FilterCollectionBuilder</parameter>
        <parameter key="domain_object_array_decorator.class">Tickit\Component\Decorator\DomainObjectArrayDecorator</parameter>
        <parameter key="domain_object_collection_array_decorator.class">Tickit\Component\Decorator\Collection\DomainObjectCollectionDecorator</parameter>
        <parameter key="flash_provider.class">Tickit\Component\Flash\Provider</parameter>
    </parameters>

    <services>

        <service id='tickit.flash_messages' class='%flash_provider.class%'>
            <argument type="service" id="session" />
            <argument>%kernel.root_dir%/config/extra</argument>
            <argument>%kernel.environment%</argument>
        </service>

        <service id="session" class="Tickit\Bundle\CoreBundle\Entity\CoreSession">
            <argument type="service" id="session.storage" />
        </service>

        <service id="tickit.domain_object_array_decorator" class="%domain_object_array_decorator.class%" />

        <service id="tickit.domain_object_collection_array_decorator" class="%domain_object_collection_array_decorator.class%">
            <argument type="service" id="tickit.domain_object_array_decorator" />
        </service>

        <service id="tickit.filter_collection_builder" class="%filter_collection_builder.class%" />

    </services>

</container>