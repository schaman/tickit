<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="tickit_client.form.client" class="Tickit\ClientBundle\Form\Type\ClientFormType">
            <tag name="form.type" alias="tickit_client" />
        </service>

        <service id="tickit_client.form.type.client_picker" class="Tickit\ClientBundle\Form\Type\Picker\ClientPickerType">
            <tag name="form.type" alias="tickit_client_picker" />
            <argument type="service" id="tickit_client.display_name_decorator" />
            <argument type="service" id="tickit_client.form.client_picker_data_transformer" />
        </service>

        <service id="tickit_client.form.client_picker_data_transformer" class="Tickit\ClientBundle\Form\Type\Picker\DataTransformer\ClientPickerDataTransformer">
            <argument type="service" id="tickit_client.manager" />
        </service>

    </services>

</container>