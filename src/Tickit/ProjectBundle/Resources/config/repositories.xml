<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="tickit_project.choice_attribute_choice_repository" class="Tickit\ProjectBundle\Entity\Repository\ChoiceAttributeChoiceRepository" factory-service="doctrine" factory-method="getRepository">
            <argument>TickitProjectBundle:ChoiceAttributeChoice</argument>
        </service>

        <service id="tickit_project.attribute_repository" class="Tickit\ProjectBundle\Entity\Repository\AttributeRepository" factory-service="doctrine" factory-method="getRepository">
            <argument>TickitProjectBundle:AbstractAttribute</argument>
        </service>

        <service id="tickit_project.project_repository" class="Tickit\ProjectBundle\Entity\Repository\ProjectRepository" factory-service="doctrine" factory-method="getRepository">
            <argument>TickitProjectBundle:Project</argument>
        </service>

    </services>

</container>