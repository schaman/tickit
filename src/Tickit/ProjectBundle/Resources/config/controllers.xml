<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="tickit_project.controller.template" class="Tickit\ProjectBundle\Controller\TemplateController">
            <argument type="service" id="tickit_project.attribute_manager" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="templating" />
            <argument type="service" id="tickit_project.form.project" />
            <argument type="service" id="tickit_project.attribute_form_type_guesser" />
        </service>

        <service id="tickit_project.controller.api" class="Tickit\ProjectBundle\Controller\ApiController" scope="request">
            <argument type="service" id="tickit.filter_collection_builder" />
            <argument type="service" id="tickit_project.manager" />
            <argument type="service" id="tickit_project.attribute_manager" />
            <argument type="service" id="tickit.controller.base_helper" />
            <argument type="service" id="tickit.controller.csrf_helper" />
        </service>

        <service id="tickit_project.controller.project" class="Tickit\ProjectBundle\Controller\ProjectController" scope="request">
            <argument type="service" id="tickit.controller.form_helper" />
            <argument type="service" id="tickit.controller.base_helper" />
            <argument type="service" id="tickit_project.attribute_manager" />
            <argument type="service" id="tickit_project.manager" />
            <argument type="service" id="tickit_project.form.project" />
            <argument type="service" id="tickit.controller.csrf_helper" />
        </service>

        <service id="tickit_project.controller.attribute" class="Tickit\ProjectBundle\Controller\ProjectController" scope="request">
            <argument type="service" id="tickit.controller.form_helper" />
            <argument type="service" id="tickit.controller.base_helper" />
            <argument type="service" id="tickit_project.attribute_form_type_guesser" />
            <argument type="service" id="tickit_project.attribute_manager" />
            <argument type="service" id="tickit.controller.csrf_helper" />
        </service>

    </services>

</container>