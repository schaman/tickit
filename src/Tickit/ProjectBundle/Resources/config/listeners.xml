<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="tickit_project.form.event_listener" class="Tickit\ProjectBundle\Form\EventListener\FormSubscriber">
            <tag name="kernel.event_listener" event="tickit_project.form.event.entity_attribute_build" method="onEntityAttributeFormBuild" />
        </service>

        <service id="tickit_project.project_navigation" class="Tickit\ProjectBundle\Listener\NavigationBuilder">
            <argument type="service" id="router" />
            <tag name="kernel.event_listener" event="tickit.event.main_navigation_build" method="onBuild"/>
        </service>

    </services>

</container>