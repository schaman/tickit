<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="tickit_permission.listener.sync" class="Tickit\PermissionBundle\Listener\Sync">
            <argument type="service" id="security.context" />
            <argument type="service" id="tickit_permission.loader" />
            <argument type="service" id="session" />
            <tag name="kernel.event_listener" event="kernel.controller" method="synchronizePermissions" />
        </service>

    </services>

</container>
