<header role="banner">

    <div class="inner">
        <a href="#" id="logo">Tickit</a>
        {% if is_granted('ROLE_USER') %}
            <nav role="navigation">
                <ul>
                    {% for item in navigation %}
                        <li class="active">
                            <a href="{{ item.route }}">{{ item.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
            <div class='account'>
                <div class='account-thumb'>
                    <img height='28' width='28' src='{{ my_avatar_url(28) }}' />
                    <span class='gloss'></span>
                </div>
                <a href="{{ path('fos_user_profile_edit') }}">{{ app.user.fullName }}</a>
                <div class='profile-menu'>
                    <ul>
                        <li><a href="{{ path('fos_user_profile_edit') }}" title="Edit your profile">Edit Your Profile</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}" title="Log out">Log Out</a></li>
                    </ul>
                </div>
            </div>
        {% endif %}
    </div><!--/inner -->

</header>
