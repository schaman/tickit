<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id='tickit.controller.default' class='Tickit\CoreBundle\Controller\DefaultController'>
            <argument type="service" id="templating" />
        </service>

        <service id="tickit.controller.helper" class="Tickit\CoreBundle\Controller\ControllerHelper" public="false" scope="request">
            <argument type="service" id="request" />
            <argument type="service" id="form.csrf_provider" />
            <argument type="service" id="tickit.domain_object_array_decorator" />
            <argument type="service" id="templating" />
        </service>

    </services>

</container>