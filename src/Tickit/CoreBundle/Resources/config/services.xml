<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id='tickit.flash_messages' class='Tickit\CoreBundle\Flash\Provider'>
            <argument type="service" id="session" />
            <argument>%kernel.root_dir%/config/extra</argument>
            <argument>%kernel.environment%</argument>
        </service>
        <service id="tickit.domain_object_array_decorator" class="Tickit\CoreBundle\Decorator\DomainObjectArrayDecorator" />
    </services>

</container>