    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="tickit_core.listener.xmlhttprequest" class="Tickit\CoreBundle\Listener\XmlHttpRequestListener">
