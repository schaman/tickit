<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
        <services>

            <service id="tickit_user.form.event_listener" class="Tickit\UserBundle\Form\EventListener\FormSubscriber">
                <tag name="kernel.event_listener" event="tickit_project.form.event.entity_attribute_build" method="onEntityAttributeFormBuild" />
            </service>

            <service id="tickit_user.listener.login" class="Tickit\UserBundle\Listener\LoginListener">
                <argument type="service" id="session" />
                <argument type="service" id="doctrine.orm.entity_manager" />
                <tag name="kernel.event_listener" event="security.interactive_login" method="onSecurityInteractiveLogin" />
            </service>

            <service id="tickit_user.listener.kernel_exception" class="Tickit\UserBundle\Listener\KernelExceptionListener">
                <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" priority="1000" />
            </service>

            <service id="tickit_user.listener.activity" class="Tickit\UserBundle\Listener\ActivityListener">
                <argument type="service" id="security.context" />
                <argument type="service" id="doctrine.orm.entity_manager" />
                <tag name="kernel.event_listener" event="kernel.controller" method="onCoreController" />
            </service>

            <service id="tickit_user.user_navigation" class="Tickit\UserBundle\Listener\NavigationBuilder">
                <argument type="service" id="router" />
                <tag name="kernel.event_listener" event="tickit.event.main_navigation_build" method="onBuild"/>
            </service>

        </services>
</container>