<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
        <services>

            <service id="tickit_user.controller.template" class="Tickit\UserBundle\Controller\TemplateController">
                <argument type="service" id="tickit_user.manager" />
                <argument type="service" id="form.factory" />
                <argument type="service" id="templating" />
            </service>

            <service id="tickit_user.controller.api" class="Tickit\UserBundle\Controller\ApiController" scope="request">
                <argument type="service" id="tickit.controller.helper" />
                <argument type="service" id="tickit.filter_collection_builder" />
                <argument type="service" id="tickit_user.manager" />
                <argument type="service" id="tickit_user.avatar" />
            </service>

        </services>
</container>