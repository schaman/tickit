<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="tickit_user.avatar_adapter" class="Tickit\UserBundle\Avatar\Adapter\GravatarAdapter" />

        <service id="tickit_user.avatar_twig_extension" class="Tickit\UserBundle\Avatar\Twig\AvatarExtension">
            <argument type="service" id="tickit_user.avatar_adapter" />
            <argument type="service" id="security.context" />
            <tag name="twig.extension" />
        </service>

        <service id="tickit_user.user_event_dispatcher" class="Tickit\UserBundle\Event\Dispatcher\UserEventDispatcher">
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="tickit_user.user_provider" class="Tickit\UserBundle\Security\UserProvider">
            <argument type="service" id="tickit_user.manager" />
        </service>

        <service id="tickit_user.security.authentication_handler" class="Tickit\UserBundle\Security\AuthenticationHandler">
            <argument type="service" id="router" />
        </service>

        <service id="tickit_user.user_converter" class="Tickit\UserBundle\Converter\UserEntityValueConverter">
            <argument type="service" id="tickit_user.manager" />
        </service>

    </services>

</container>