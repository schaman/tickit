<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="tickit_notification.provider" class="Tickit\NotificationBundle\Provider\NotificationProvider">
            <argument type="service" id="doctrine" />
            <argument>%tickit_notification.api_message_limit%</argument>
        </service>

        <service id="tickit_notification.manager" class="Tickit\NotificationBundle\Manager\NotificationManager">
            <argument type="service" id="doctrine" />
            <argument type="service" id="tickit_notification.factory" />
        </service>

        <service id="tickit_notification.factory" class="Tickit\NotificationBundle\Factory\NotificationFactory">
            <argument type="service" id="doctrine" />
        </service>

    </services>

</container>