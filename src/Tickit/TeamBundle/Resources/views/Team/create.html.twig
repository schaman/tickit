{% extends '::no-content.html.twig' %}

{% block content %}
    <h2>Create Team</h2>

    {% if app.session.flashbag.has('error') %}
        <div class="flash-error">
            {% for message in app.session.flashbag.get('error') %}
                {{ message }}
            {% endfor %}
        </div>
    {% endif %}

    <form method='post' action='{{ path('team_create') }}' {{ form_enctype(form) }}>
        {{ form_widget(form) }}

        <input type='submit' value='Save Team' />
    </form>
{% endblock %}